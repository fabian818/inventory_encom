.home
  .form__container
    %form{'ng-submit' => 'vm.create()'}
      %input{'ng-model' => 'vm.new_product.name', placeholder: 'Nombre del producto'}
      %input{'ng-model' => 'vm.new_product.cost', placeholder: 'Costo'}
      %input{'ng-model' => 'vm.new_product.price', placeholder: 'Precio'}
      %input{'ng-model' => 'vm.new_product.quantity', placeholder: 'Cantidad inicial'}
      %select{'ng-model' => 'vm.new_product.category_id'}
        %option{"value"=>""}
          Seleccione la categoría
        %option{"ng-repeat"=>"category in vm.categories", "ng-value"=>"category.id"}
          {{category.name}}
      %button
        Agregar
        %i.fa.fa-plus
  .list
    .title
      .name Nombre
      .cost Costo
      .price Precio
      .quantity Cantidad
      .category Categoría
      .options Opciones
    .product{'ng-repeat' => 'product in vm.products', id: 'product-{{product.id}}'}
      .text {{product.name}}
      .text {{product.cost}}
      .text {{product.price}}
      .text {{product.quantity}}
      .select {{product.category.name}}
      .options
        %i.fa.fa-times.red{'ng-click' => 'vm.destroy(product.id)'}
        %i.fa.fa-pencil-square-o{'ng-click' => 'vm.update(product)'}
.remodal{"data-remodal-id" => "modal"}
  %button.remodal-close{"data-remodal-action" => "close"}
  %h1 Remodal
  %p
    Responsive, lightweight, fast, synchronized with CSS animations, fully customizable modal window plugin with declarative configuration and hash tracking.
  %br/
  %button.remodal-cancel{"data-remodal-action" => "cancel"} Cancel
  %button.remodal-confirm{"data-remodal-action" => "confirm"} OK
